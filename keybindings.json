/*
custom keys:
-
ctrl+shift+m MAP()
ctrl+shift+l CONSOLE.LOG()
ctrl+shift+p PROMISE()
ctrl+shift+f FOREACH() - must select
ctrl+shift+g FOR()
-
default windows path:
%appdata%/Roaming/Code/User
-
dont forget to install:
bracket pair colorizer
chalk
*/
[
    {
        "key": "ctrl+shift+z",
        "command": "-redo"
    },
    {
        "key": "ctrl+shift+z",
        "command": "code-runner.run"
    },
    {
        "key": "ctrl+alt+n",
        "command": "-code-runner.run"
    },{
        "key": "ctrl+shift+l",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "console.log(${TM_SELECTED_TEXT}$1);"
        }
    },{
        "key": "ctrl+shift+p",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "return new Promise((resolve, reject) => {\n\t${TM_SELECTED_TEXT}$1\n});"
        }
    },{
        "key": "ctrl+shift+f",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "let workLeft = ${TM_SELECTED_TEXT}$0.length;\n${TM_SELECTED_TEXT}$1.forEach((item, index) => {\n\t// decrement and done\n\tworkLeft--;\n\tif(workLeft === 0){\n\t\t//\n\t};\n});"
        }
    },{
        "key": "ctrl+shift+g",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "for(let i = 0; i < ${TM_SELECTED_TEXT}$1; i++){\n\t//\n};"
        }
    },{
        "key": "ctrl+shift+m",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": ".map(item => {\n\t//${TM_SELECTED_TEXT}$1\n});"
        }
    }
]