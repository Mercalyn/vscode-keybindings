/*
custom keys:
-
ctrl+shift+m MAP()
ctrl+shift+l CONSOLE.LOG()
ctrl+shift+p PROMISE()
ctrl+shift+f FOREACH()
*/
[
    {
        "key": "ctrl+shift+z",
        "command": "-redo"
    },
    {
        "key": "ctrl+shift+z",
        "command": "code-runner.run"
    },
    {
        "key": "ctrl+alt+n",
        "command": "-code-runner.run"
    },{
        "key": "ctrl+shift+l",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "console.log(${TM_SELECTED_TEXT}$1);"
        }
    },{
        "key": "ctrl+shift+p",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "return new Promise((resolve, reject) => {\n\t${TM_SELECTED_TEXT}$1\n});"
        }
    },{
        "key": "ctrl+shift+f",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": ".forEach((item, index) => {\n\t${TM_SELECTED_TEXT}$1\n});"
        }
    },{
        "key": "ctrl+shift+m",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": ".map(item => {\n\t${TM_SELECTED_TEXT}$1\n});"
        }
    }
]